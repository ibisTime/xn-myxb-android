<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <ImageView
                android:id="@+id/img_left"
                android:layout_marginLeft="@dimen/layout_left_interval"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/tv_mobile"
                android:layout_marginLeft="11dp"
                android:textSize="14sp"
                android:textColor="@color/text_black_cd"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_divide"
                android:text="分配给Ta"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/title_bg"
                android:layout_marginRight="@dimen/layout_right_interval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <View
            android:id="@+id/line_atlas"
            android:layout_marginLeft="@dimen/layout_left_interval"
            style="@style/style_split_line"/>

    </LinearLayout>
</layout>