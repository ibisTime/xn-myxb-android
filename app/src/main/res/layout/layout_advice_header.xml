<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        tools:showIn="@layout/fragment_advice">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_left_interval"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评分及评论"
                android:textColor="@color/app_txt_black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7.7"
                android:textColor="@color/app_txt_red"
                android:textSize="45sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="满分5分"
                android:textColor="@color/app_txt_gray"
                android:textSize="14sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingRight="@dimen/layout_right_interval">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="15dp"
                android:text="查看全部"
                android:textColor="@color/app_txt_red"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <com.cdkj.myxb.views.MyRatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        app:clickable="false"
                        app:halfstart="false"
                        app:starCount="0"
                        app:starEmpty="@drawable/star_empty"
                        app:starFill="@drawable/star_full"
                        app:starImageHeight="15dp"
                        app:starImagePadding="3dp"
                        app:starImageWidth="15dp"
                        app:starNum="5" />

                    <com.cdkj.myxb.views.MyRatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        app:clickable="false"
                        app:halfstart="false"
                        app:starCount="0"
                        app:starEmpty="@drawable/star_empty"
                        app:starFill="@drawable/star_full"
                        app:starImageHeight="15dp"
                        app:starImagePadding="3dp"
                        app:starImageWidth="15dp"
                        app:starNum="4" />

                    <com.cdkj.myxb.views.MyRatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        app:clickable="false"
                        app:halfstart="false"
                        app:starCount="0"
                        app:starEmpty="@drawable/star_empty"
                        app:starFill="@drawable/star_full"
                        app:starImageHeight="15dp"
                        app:starImagePadding="3dp"
                        app:starImageWidth="15dp"
                        app:starNum="3" />

                    <com.cdkj.myxb.views.MyRatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        app:clickable="false"
                        app:halfstart="false"
                        app:starCount="0"
                        app:starEmpty="@drawable/star_empty"
                        app:starFill="@drawable/star_full"
                        app:starImageHeight="15dp"
                        app:starImagePadding="3dp"
                        app:starImageWidth="15dp"
                        app:starNum="2" />

                    <com.cdkj.myxb.views.MyRatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        app:clickable="false"
                        app:halfstart="false"
                        app:starCount="0"
                        app:starEmpty="@drawable/star_empty"
                        app:starFill="@drawable/star_full"
                        app:starImageHeight="15dp"
                        app:starImagePadding="3dp"
                        app:starImageWidth="15dp"
                        app:starNum="1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ProgressBar
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginLeft="10dp"
                            android:max="100"
                            android:progress="50"
                            android:progressDrawable="@drawable/shape_advice_progress" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ProgressBar
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginLeft="10dp"
                            android:max="100"
                            android:progress="50"
                            android:progressDrawable="@drawable/shape_advice_progress" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ProgressBar
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginLeft="10dp"
                            android:max="100"
                            android:progress="50"
                            android:progressDrawable="@drawable/shape_advice_progress" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ProgressBar
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginLeft="10dp"
                            android:max="100"
                            android:progress="50"
                            android:progressDrawable="@drawable/shape_advice_progress" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ProgressBar
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginLeft="10dp"
                            android:max="100"
                            android:progress="50"
                            android:progressDrawable="@drawable/shape_advice_progress" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>