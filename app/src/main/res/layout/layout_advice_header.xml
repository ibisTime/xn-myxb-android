<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        tools:showIn="@layout/fragment_advice">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_left_interval"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评分及建议"
                android:textColor="@color/app_txt_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_average"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@color/app_txt_red"
                android:textSize="45sp"
                android:textStyle="bold"
                tools:text="7.7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="满分5分"
                android:textColor="@color/app_txt_gray"
                android:textSize="14sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingRight="@dimen/layout_right_interval">

            <TextView
                android:id="@+id/tv_show_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="15dp"
                android:text="查看全部"
                android:textColor="@color/app_txt_red"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <com.cdkj.myxb.weight.views.MyRatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        app:clickable="false"
                        app:halfstart="false"
                        app:starCount="0"
                        app:starEmpty="@drawable/star_empty"
                        app:starFill="@drawable/star_full"
                        app:starImageHeight="@dimen/advice_ratingbar_width"
                        app:starImagePadding="@dimen/advice_ratingbar_padding"
                        app:starImageWidth="@dimen/advice_ratingbar_height"
                        app:starNum="5" />

                    <com.cdkj.myxb.weight.views.MyRatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        app:clickable="false"
                        app:halfstart="false"
                        app:starCount="0"
                        app:starEmpty="@drawable/star_empty"
                        app:starFill="@drawable/star_full"
                        app:starImageHeight="@dimen/advice_ratingbar_width"
                        app:starImagePadding="@dimen/advice_ratingbar_padding"
                        app:starImageWidth="@dimen/advice_ratingbar_height"
                        app:starNum="4" />


                    <com.cdkj.myxb.weight.views.MyRatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        app:clickable="false"
                        app:halfstart="false"
                        app:starCount="0"
                        app:starEmpty="@drawable/star_empty"
                        app:starFill="@drawable/star_full"
                        app:starImageHeight="@dimen/advice_ratingbar_width"
                        app:starImagePadding="@dimen/advice_ratingbar_padding"
                        app:starImageWidth="@dimen/advice_ratingbar_height"
                        app:starNum="3" />

                    <com.cdkj.myxb.weight.views.MyRatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        app:clickable="false"
                        app:halfstart="false"
                        app:starCount="0"
                        app:starEmpty="@drawable/star_empty"
                        app:starFill="@drawable/star_full"
                        app:starImageHeight="@dimen/advice_ratingbar_width"
                        app:starImagePadding="@dimen/advice_ratingbar_padding"
                        app:starImageWidth="@dimen/advice_ratingbar_height"
                        app:starNum="2" />


                    <com.cdkj.myxb.weight.views.MyRatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        app:clickable="false"
                        app:halfstart="false"
                        app:starCount="0"
                        app:starEmpty="@drawable/star_empty"
                        app:starFill="@drawable/star_full"
                        app:starImageHeight="@dimen/advice_ratingbar_width"
                        app:starImagePadding="@dimen/advice_ratingbar_padding"
                        app:starImageWidth="@dimen/advice_ratingbar_height"
                        app:starNum="1" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ProgressBar
                            android:id="@+id/progressBar_5"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/advice_progressbar_hegiht"
                            android:progressDrawable="@drawable/shape_advice_progress" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ProgressBar
                            android:id="@+id/progressBar_4"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/advice_progressbar_hegiht"
                            android:progressDrawable="@drawable/shape_advice_progress" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ProgressBar
                            android:id="@+id/progressBar_3"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/advice_progressbar_hegiht"
                            android:progressDrawable="@drawable/shape_advice_progress" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ProgressBar
                            android:id="@+id/progressBar_2"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/advice_progressbar_hegiht"
                            android:progressDrawable="@drawable/shape_advice_progress" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ProgressBar
                            android:id="@+id/progressBar_1"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/advice_progressbar_hegiht"
                            android:progressDrawable="@drawable/shape_advice_progress" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textColor="@color/app_txt_gray"
                android:textSize="14sp"
                tools:text="186个评分" />

        </LinearLayout>

    </LinearLayout>
</layout>