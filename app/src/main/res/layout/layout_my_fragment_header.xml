<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/fragment_my">

    <LinearLayout
        android:visibility="invisible"
        android:id="@+id/lin_user_info"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:background="@drawable/my_fra_bg"
        android:paddingLeft="@dimen/layout_left_interval">

        <FrameLayout

            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp">

            <ImageView
                android:id="@+id/img_user_logo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:src="@drawable/my_logo" />

            <ImageView
                android:id="@+id/img_gender"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="3dp"
                tools:src="@drawable/women_2" />

        </FrameLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="16sp"
                tools:text="王小二" />

            <TextView
                android:id="@+id/tv_user_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:text="13000202020" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img_right"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/layout_right_interval"
            android:src="@drawable/more_right_white" />

    </LinearLayout>
</layout>


            