<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:id="@+id/img_left"
                android:layout_marginLeft="@dimen/layout_left_interval"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/tv_mobile"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                android:textColor="@color/text_black_cd"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_more"
                android:layout_marginRight="@dimen/layout_right_interval"
                android:background="@drawable/user_atlas_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <View
            android:id="@+id/line_atlas"
            android:layout_marginLeft="@dimen/layout_left_interval"
            style="@style/style_split_line"/>

        <LinearLayout
            android:id="@+id/ll_rv"
            android:orientation="vertical"
            android:layout_marginLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_mgJxs"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <ImageView
                        android:background="@color/title_bg"
                        android:layout_width="2dp"
                        android:layout_height="11dp"/>

                    <TextView
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="30dp"
                        android:text="经销商"
                        android:textColor="@color/app_txt_black"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/iv_mgJxs"
                        android:layout_marginRight="@dimen/layout_right_interval"
                        android:background="@drawable/user_atlas_lower_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    style="@style/style_split_line"/>

            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_mgJxs"
                android:visibility="gone"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </android.support.v7.widget.RecyclerView>

        </LinearLayout>




    </LinearLayout>
</layout>