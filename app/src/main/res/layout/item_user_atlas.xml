<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_level"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="@dimen/layout_left_interval"
            android:paddingRight="@dimen/layout_right_interval"
            android:paddingTop="15dp">

            <ImageView
                android:id="@+id/iv_line"
                android:layout_width="16dp"
                android:layout_height="16dp"/>

            <TextView
                android:id="@+id/tv_line"
                android:layout_marginLeft="11dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="@color/app_txt_black"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:id="@+id/line_level"
            style="@style/style_split_line"/>

        <LinearLayout
            android:id="@+id/ll_jxs"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="待分配经销商"
                    android:textColor="@color/app_txt_black"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_jxs"
                    android:layout_marginRight="@dimen/layout_right_interval"
                    android:background="@drawable/user_atlas_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:layout_marginLeft="15dp"
                style="@style/style_split_line"/>

        </LinearLayout>

        <View
            android:layout_marginLeft="15dp"
            style="@style/style_split_line"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_jxs"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/ll_fws"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:paddingLeft="15dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="1级服务团队"
                    android:textColor="@color/app_txt_black"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_fws"
                    android:layout_marginRight="@dimen/layout_right_interval"
                    android:background="@drawable/user_atlas_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:layout_marginLeft="15dp"
                style="@style/style_split_line"/>

        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_fws"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/ll_mg_jxs"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:paddingLeft="15dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="1级服务团队"
                    android:textColor="@color/app_txt_black"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_mg_jxs"
                    android:layout_marginRight="@dimen/layout_right_interval"
                    android:background="@drawable/user_atlas_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:layout_marginLeft="15dp"
                style="@style/style_split_line"/>

        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_mg_jxs"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </android.support.v7.widget.RecyclerView>

        <View
            style="@style/style_split_line_broad"/>


    </LinearLayout>
</layout>