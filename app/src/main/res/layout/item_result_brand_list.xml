<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:paddingLeft="@dimen/layout_left_interval"
            android:paddingRight="@dimen/layout_right_interval"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/tv_brand_name"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textColor="@color/app_txt_black"
                android:textSize="12sp"
                android:text="" />

            <EditText
                android:id="@+id/edt_sale"
                android:textColor="@color/app_txt_black"
                android:hint="请输入该品牌的销售业绩"
                android:layout_weight="1"
                android:textSize="14sp"
                android:inputType="numberDecimal"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/app_txt_black"
                android:textSize="14sp"
                android:text="@string/money_sing" />

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_marginLeft="10dp"
                android:background="@drawable/address_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View style="@style/style_split_line" />

    </LinearLayout>
</layout>