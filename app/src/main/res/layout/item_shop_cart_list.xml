<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="95dp">

            <ImageView
                android:id="@+id/iv_choice"
                android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:background="@drawable/pay_unchoose"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <ImageView
                android:id="@+id/iv_advPic"
                android:layout_marginLeft="10dp"
                android:layout_width="100dp"
                android:layout_height="75dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="@dimen/layout_right_interval"
                android:layout_width="match_parent"
                android:layout_height="75dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginRight="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_name"
                            android:text="title"
                            android:textSize="14sp"
                            android:textColor="@color/text_black_cd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tv_info"
                            android:text="infoinfoinfoinfoinfoinfoi"
                            android:layout_marginTop="5dp"
                            android:textSize="12sp"
                            android:textColor="#999999"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />

                        <TextView
                            android:id="@+id/tv_price"
                            android:text="Â¥0.00"
                            android:textSize="12sp"
                            android:textColor="@color/btn_select_un"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_delete"
                        android:visibility="gone"
                        android:layout_alignParentRight="true"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/address_delete" />

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/ll_sub"
                            android:background="@drawable/common_shop_cart_list_btn_bg"
                            android:gravity="center"
                            android:layout_width="20dp"
                            android:layout_height="20dp">

                            <ImageView
                                android:src="@drawable/trade_mock_sub"
                                android:layout_width="10dp"
                                android:layout_height="10dp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_quantity"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="0"
                            android:textSize="14sp"
                            android:textColor="@color/text_black_cd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:id="@+id/ll_add"
                            android:visibility="gone"
                            android:gravity="center"
                            android:background="@drawable/common_shop_cart_list_btn_bg"
                            android:layout_width="20dp"
                            android:layout_height="20dp">

                            <ImageView
                                android:src="@drawable/trade_mock_add"
                                android:layout_width="10dp"
                                android:layout_height="10dp" />

                        </LinearLayout>


                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            style="@style/style_split_line"/>

    </LinearLayout>
</layout>