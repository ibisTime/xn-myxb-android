<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/activity_integral_mall">

    <LinearLayout
        android:id="@+id/lin_user_info"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:paddingLeft="@dimen/layout_left_interval">

        <FrameLayout
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp">

            <ImageView
                android:id="@+id/img_user_logo"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:src="@drawable/my_logo" />

            <ImageView
                android:id="@+id/img_gender"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="right|bottom"
                tools:src="@drawable/women" />

        </FrameLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/app_txt_black"
                android:textSize="16sp"
                tools:text="王小二" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_user_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/my_integral"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_myintegral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/app_txt_red"
                    android:textSize="14sp"
                    tools:text="13000202020" />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_integral_rules"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/layout_right_interval"
            android:background="@drawable/btn_select_radius"
            android:padding="5dp"
            android:text="赚积分"
            android:textColor="@color/white" />

    </LinearLayout>
</layout>


