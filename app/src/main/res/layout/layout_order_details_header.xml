<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        tools:showIn="@layout/activity_order_details">

        <ImageView
            android:id="@+id/img_good"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            tools:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/layout_right_interval"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_order_name"
                style="@style/text_black"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:maxLines="2"
                android:textSize="14sp"
                tools:text="一个商品一个商品一个商品一个商品一个商品一个商品一个商品一个商品一个商品" />

            <TextView
                android:id="@+id/tv_order_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:textSize="12sp"
                tools:text="物美价廉" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/app_txt_red"
                    tools:text="1900" />


                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_num"
                    style="@style/text_black"
                    android:layout_gravity="bottom"
                    tools:text="X1" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</layout>