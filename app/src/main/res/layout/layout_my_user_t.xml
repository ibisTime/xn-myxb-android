<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.cdkj.baselibrary.views.RowInfoLayout
                android:id="@+id/row_trip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:img_left="@drawable/my_results"
                app:txt_left="我的行程" />

            <TextView
                android:id="@+id/row_trip_num"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/common_list_count"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="10sp"
                tools:text="0" />

        </FrameLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="18dp"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/img_left"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/my_results" />

            <TextView
                android:id="@+id/tv_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:text="我的行程"
                android:textColor="@color/text_black_cd"
                android:textSize="16sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/img_right"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/more_right" />

        </LinearLayout>


        <com.cdkj.baselibrary.views.RowInfoLayout
            android:id="@+id/row_group_trip"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:img_left="@drawable/my_top_list"
            app:txt_left="团队行程" />


        <com.cdkj.baselibrary.views.RowInfoLayout
            android:id="@+id/row_join"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:img_left="@drawable/my_help_center"
            app:txt_left="我要成为服务团队" />

        <View
            style="@style/style_split_line"
            android:layout_marginLeft="15dp" />

        <com.cdkj.baselibrary.views.RowInfoLayout
            android:id="@+id/row_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:img_left="@drawable/my_jf"
            app:txt_left="我的评论" />

        <com.cdkj.baselibrary.views.RowInfoLayout
            android:id="@+id/row_info"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:img_left="@drawable/my_info"
            app:txt_left="我的履历" />

        <View
            style="@style/style_split_line"
            android:layout_marginLeft="15dp" />

        <FrameLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.cdkj.baselibrary.views.RowInfoLayout
                android:id="@+id/row_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:img_left="@drawable/my_next_go"
                app:txt_left="我的订单" />

            <TextView
                android:id="@+id/row_order_num"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/common_list_count"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="10sp"
                tools:text="0" />

        </FrameLayout>





    </LinearLayout>
</layout>