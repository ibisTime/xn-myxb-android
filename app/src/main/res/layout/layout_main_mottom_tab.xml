<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/radiogroup"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:clipChildren="false"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_tab_1"
            android:orientation="vertical"
            android:layout_height="50dp"
            style="@style/main_tab_radio">

            <ImageView
                android:id="@+id/iv_tab_1"
                android:scaleType="fitXY"
                android:layout_width="18.5dp"
                android:layout_height="18.5dp" />
    
            <TextView
                android:id="@+id/tv_tab_1"
                android:layout_marginTop="6dp"
                android:textSize="12sp"
                android:textColor="@color/app_txt_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tab_2"
            android:orientation="vertical"
            android:layout_height="50dp"
            style="@style/main_tab_radio">

            <ImageView
                android:id="@+id/iv_tab_2"
                android:scaleType="fitXY"
                android:layout_width="18.5dp"
                android:layout_height="18.5dp" />

            <TextView
                android:id="@+id/tv_tab_2"
                android:layout_marginTop="6dp"
                android:textSize="12sp"
                android:textColor="@color/app_txt_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_tab_3"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tab_3"
                android:scaleType="fitXY"
                android:layout_width="45dp"
                android:layout_height="45dp"/>

            <TextView
                android:id="@+id/tv_tab_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tab_4"
            android:orientation="vertical"
            android:layout_height="50dp"
            style="@style/main_tab_radio">

            <ImageView
                android:id="@+id/iv_tab_4"
                android:scaleType="fitXY"
                android:layout_width="18.5dp"
                android:layout_height="18.5dp" />

            <TextView
                android:id="@+id/tv_tab_4"
                android:layout_marginTop="6dp"
                android:textSize="12sp"
                android:textColor="@color/app_txt_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tab_5"
            android:orientation="vertical"
            android:layout_height="50dp"
            style="@style/main_tab_radio">

            <ImageView
                android:id="@+id/iv_tab_5"
                android:scaleType="fitXY"
                android:layout_width="18.5dp"
                android:layout_height="18.5dp" />

            <TextView
                android:id="@+id/tv_tab_5"
                android:layout_marginTop="6dp"
                android:textSize="12sp"
                android:textColor="@color/app_txt_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>
</layout>