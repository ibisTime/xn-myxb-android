<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/radiogroup"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:clipChildren="false"
        android:orientation="horizontal"
        android:weightSum="5">

        <RadioButton
            android:id="@+id/radio_main_tab_1"
            style="@style/main_tab_radio"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:checked="true"
            android:drawableTop="@drawable/main_buttom_tab_1"
            android:text="首页" />

        <RadioButton
            android:id="@+id/radio_main_tab_2"
            style="@style/main_tab_radio"
            android:drawableTop="@drawable/main_buttom_tab_2"
            android:text="@string/help_center" />

        <LinearLayout
            android:id="@+id/llayout_tab_3"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_release"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:src="@drawable/main_tab_3" />

            <TextView
                android:id="@+id/tv_invitation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/invitation_friend"
                android:textColor="@drawable/main_tab_txt_select_color"
                android:textSize="12sp" />


        </LinearLayout>

        <RadioButton
            android:id="@+id/radio_main_tab_4"
            style="@style/main_tab_radio"
            android:drawableTop="@drawable/main_buttom_tab_3"
            android:text="@string/advice" />

        <RadioButton
            android:id="@+id/radio_main_tab_5"
            style="@style/main_tab_radio"
            android:drawableTop="@drawable/main_buttom_tab_4"
            android:text="@string/mine" />
    </LinearLayout>
</layout>