<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:background="#f5f5f9"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/lin_start_date"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="开始时间"
                android:textColor="@color/app_txt_black"
                android:textColorHint="@color/app_txt_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_start_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请选择开始时间"

                android:textColor="@color/app_txt_black"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginRight="@dimen/layout_right_interval"
                android:src="@drawable/more_right" />


        </LinearLayout>

        <View
            style="@style/style_split_line"/>

        <LinearLayout
            android:id="@+id/lin_stop_date"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="结束时间"
                android:textColor="@color/app_txt_black"
                android:textColorHint="@color/app_txt_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_stop_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请选择结束时间"

                android:textColor="@color/app_txt_black"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginRight="@dimen/layout_right_interval"
                android:src="@drawable/more_right" />


        </LinearLayout>

        <View
            style="@style/style_split_line_broad"/>

        <LinearLayout
            android:id="@+id/lin_type"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="类型\u3000\u3000"
                android:textColor="@color/app_txt_black"
                android:textColorHint="@color/app_txt_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请选择类型"

                android:textColor="@color/app_txt_black"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginRight="@dimen/layout_right_interval"
                android:src="@drawable/more_right" />


        </LinearLayout>

        <Button
            android:id="@+id/btn_add"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginLeft="@dimen/layout_left_interval"
            android:layout_marginRight="@dimen/layout_right_interval"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_select_common"
            android:text="确定新增"
            android:textColor="@color/white" />

    </LinearLayout>
</layout>